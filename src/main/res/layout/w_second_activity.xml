<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/line"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/orange">

            <TextView
                android:id="@+id/mytext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="45dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:text='请选择检查内容'/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/border_bottom_lavender"
                android:textSize="36dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_horizontal|center_vertical"
                android:text="ID"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_bottom_lavender"
                android:textSize="36dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_horizontal|center_vertical"
                android:text="项目名称"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:scrollbars="none">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/area_line1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--
        <TextView
            android:id="@+id/wakeup"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:textSize="23dp"
            android:clickable="true"
            android:text="唤起语音" />
        -->
        <TextView
            android:id="@+id/updatedata"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:textSize="23dp"
            android:clickable="true"
            android:text="更新工序" />
        <TextView
            android:id="@+id/back"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:textSize="23dp"
            android:clickable="true"
            android:text="返回" />
        <TextView
            android:id="@+id/system_out"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:textSize="23dp"
            android:clickable="true"
            android:text="退出" />
        <ImageView
            android:id="@+id/point_icon1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/point_icon1"/>

        <ImageView
            android:id="@+id/point_icon2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/point_icon1"/>

        <ImageView
            android:id="@+id/point_icon3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/point_icon1"/>
    </LinearLayout>

</RelativeLayout>
